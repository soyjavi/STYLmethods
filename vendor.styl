/* ====================== FLEXBOX ====================== */
display-box()
  vendorValueNoMS('display', box)
  display -ms-flexbox

box-pack()
  vendorNoMS('box-pack', arguments)
  -ms-flex-pack arguments

box-align()
  vendor('box-align', arguments)
  -ms-flex-align arguments

box-sizing()
  -moz-box-sizing arguments
  box-sizing arguments

box-flex()
  vendorNoMS('box-flex', arguments)
  if arguments > 0
    -ms-flex arguments 0 auto
  else
    -ms-flex 0 arguments auto

box-orient()
  vendorNoMS('box-orient', arguments)
  if arguments is horizontal
    -ms-flex-direction row
  else if arguments is vertical
    -ms-flex-direction column

 
box-direction()
  vendorNoMS('box-direction', arguments)
  -ms-flex-direction arguments

ordinal-group()
  vendorNoMS('box-ordinal-group', arguments)
  -ms-flex-order arguments

box-lines()
