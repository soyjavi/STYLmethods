/* ====================== FLEXBOX ====================== */
display()
  if arguments is flex
    display -webkit-box
    display -webkit-flex
    display -moz-box
    display -ms-flexbox
  if arguments is inline-flex
    display -webkit-inline-box
    display -webkit-inline-flex
    display -moz-inline-flex
    display -ms-inline-flexfox
  display arguments

flex()
  bf = arguments
  if typeof(bf) == 'list'
    bf = nth(bf, 1)
  -webkit-box-flex bf
  -moz-box-flex bf
  vendor('flex', arguments)

flex-direction()
  if arguments is row-reverse or arguments is column-reverse
    -webkit-box-direction reverse
  else
    -webkit-box-direction normal
  if arguments is column-reverse or arguments is column
    -webkit-box-orient vertical
  else
    -webkit-box-orient horizontal
  vendor('flex-direction', arguments)

flex-wrap()
  if arguments is nowrap
    -ms-flex-wrap none
  else
    -ms-flex-wrap arguments
  vendorNoMS('flex-wrap', arguments)

flex-flow()
  vendor('flex-flow', arguments)

flex-grow()
  -webkit-box-flex arguments
  -ms-flex-positive arguments
  vendorNoMS('flex-grow', arguments)

flex-shrink()
  -ms-flex-negative arguments
  vendorNoMS('flex-shrink', arguments)

flex-basis()
  -ms-flex-preferred-size arguments
  vendorNoMS('flex-basis', arguments)

justify-content()
  if arguments is space-around
    -ms-flex-pack distribute
  else if arguments is space-between
    -webkit-box-back justify
    -ms-flex-pack justify
  else if arguments is flex-start
    -webkit-box-pack start
    -ms-flex-pack start
  else if arguments is flex-end
    -webkit-box-pack end
    -ms-flex-pack end
  else
    -webkit-box-pack arguments
    -ms-flex-pack arguments
  vendorNoMS('justify-content', arguments)

align-content()
  if arguments is flex-start
    -ms-flex-line-pack start
  else if arguments is flex-end
    -ms-flex-line-pack end
  else
    -ms-flex-line-pack arguments
  vendorNoMS('align-content', arguments)

align-items()
  if arguments is flex-start
    -webkit-box-align start
    -ms-flex-align start
  else if arguments is flex-end
    -webkit-box-align end
    -ms-flex-align end
  else
    -webkit-box-align arguments
    -ms-flex-align arguments
  vendorNoMS('align-items', arguments)

order()
  -webkit-box-ordinal-group (arguments + 1)
  -ms-flex-order arguments
  vendorNoMS('order', arguments)

align-self()
  if arguments is flex-start
    -ms-flex-item-align start
  else if arguments is flex-end
    -ms-flex-item-align end
  else
    -ms-flex-item-align arguments
  vendorNoMS('align-self', arguments)

