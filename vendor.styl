vendor(prop, args)
  for vendor in webkit moz ms o
    -{vendor}-{prop} args
  {prop} args

vendorValue(prop, args)
  {prop} -webkit- + args
  {prop} -moz- + args
  {prop} -ms- + args
  {prop} -o- + args
  {prop} args

vendorNoMS(prop, args)
  for vendor in webkit moz o
    -{vendor}-{prop} args
  {prop} args 

vendorValueNoMS(prop, args)
  {prop} -webkit- + args
  {prop} -moz- + args
  {prop} -o- + args
  {prop} args


