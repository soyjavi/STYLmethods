vendor(prop, args)
  for vendor in webkit moz ms
    -{vendor}-{prop} args
  {prop} args

vendorValue(prop, args)
  {prop} -webkit- + args
  {prop} -moz- + args
  {prop} -ms- + args
  {prop} args

vendorNoMS(prop, args)
  for vendor in webkit moz
    -{vendor}-{prop} args
  {prop} args

vendorValueNoMS(prop, args)
  {prop} -webkit- + args
  {prop} -moz- + args
  {prop} args

border-radius()
  vendor('border-radius', arguments)

box-shadow()
  vendor('box-shadow', arguments)

box-sizing()
  vendorNoMS('box-sizing', arguments)

